{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "sourceMap": true,
        "inlineSources": true,
        "downlevelIteration": true,
        "declaration": true,

        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,

        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,

        "outDir": "./dist/",
    },
    "include": [
        "./src/**/*",
    ],
    "exclude": []
}
